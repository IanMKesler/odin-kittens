<%= form_with model: @kitten, method: yield(:method), local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age , min: 0, step: 1%>

    <%= f.label :cuteness %>
    <%= f.number_field :cuteness, min: 0, max: 100, step: 1 %>

    <%= f.label :softness %>
    <%= f.number_field :softness, min: 0, max: 100, step: 1 %>

    <%= f.submit yield(:button_text) %>
<% end %>